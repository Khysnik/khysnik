  image-rendering:crisp-edges;               // CSS4 Proposed
  image-rendering:pixelated;                 // CSS4 Proposed
  -ms-interpolation-mode:nearest-neighbor;   // IE8+
  border: 0;

  position: absolute;
  width: auto;
  //max-width: 100%;
  //min-width: attr(width px);
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 5555;
  margin: auto;
}
