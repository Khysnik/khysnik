.poney_jockey {
  .ui_form>div>label {
    min-width: 15%;
  }
}

input.ui_keyboard_combo {
  //font-family: '_tomo';
  margin-bottom: 20px !important;
}

.ui_keyboard_layouts {
  display: flex;
}
.ui_keyboard_layouts > * {
  flex: 1;
}

.ui_keyboard_layout--Shift,
.ui_keyboard_layout--AltGraph,
.ui_keyboard_layout--Shift_AltGraph,
.ui_keyboard_layout--normal {
  flex: 0 0 358px;
  margin-bottom: 20px;
  margin-right: 5px;
}

.poney_jockey__currentkey {
  border: 1px solid #000;
}

.ui_keyboard_layout > div {
  display : flex;
}
.ui_keyboard_layout > div > button {
  //font-family: '_tomo';
  flex: 0 0 22px;
  text-align: left;
}
.ui_keyboard_layout > div:first-child {
  margin-bottom: 5px;
}
.ui_keyboard_layout > div:first-child > button {
  flex: 0 0 26px;
  text-align: left;
}
.ui_keyboard_layout > div:first-child > button[data-key="Escape"] {
  flex: 1;
}

.ui_keyboard_layout--ExtraKeys {
  flex: 0 0 71px;
}
.ui_keyboard_layout--ExtraKeys > div:first-child > button,
.ui_keyboard_layout--ExtraKeys > div > button {
  padding-left: 3px;
  flex: 0 0 22px;
  text-align: left;
}
.ui_keyboard_layout--NumpadKeys > div > button {
  padding-left: 3px;
  flex: 0 0 22px;
  text-align: left;
}
.ui_keyboard_layout > div > {

  [data-key="Backspace"],
  [data-key="ShiftRight"],
  [data-key="ControlRight"],
  [data-key="Enter"] {
    text-align: right;
  }
  [data-key="Spacebar"] {
    text-align: center;
  }

  //[data-key="Escape"],
  [data-key="Backspace"],
  [data-key="Tab"],
  //[data-key="caps"],
  [data-key="Enter"],
  [data-key="Shift"],
  [data-key="ShiftRight"],
  [data-key="Spacebar"] {
    flex: 1;
  }

  [data-key="OS"],
  [data-key="Alt"] {
    flex: 0 0 30px;
  }
  [data-key="Control"],
  [data-key="ControlRight"],
  [data-key="AltGraph"] {
    flex: 0 0 35px;
  }
  [data-key="Tab"] {
    flex: 0 0 35px;
  }
  [data-key="CapsLock"] {
    flex: 0 0 45px;
  }
  [data-key="Shift"]:first-child {
    flex: 0 0 35px;
  }

  [data-key="F4"],
  [data-key="F8"] {
    margin-right: 5px;
  }
  [data-key="Escape"] {
    margin-right: 5px;
  }

  [data-key="OS"] {
    font-weight: 700;
  }
  [data-key="OS"],
  [data-key="Shift"],
  [data-key="Enter"],
  [data-key="Home"],
  [data-key="End"],
  [data-key="Backspace"],
  [data-key="ShiftRight"],
  [data-key="CapsLock"] {
    font-size: 11px;
  }
  [data-key="PageUp"],
  [data-key="PageDown"] {
    font-size: 12px;
  }

  [data-key="ArrowUp"],
  [data-key="ArrowDown"],
  [data-key="ArrowLeft"],
  [data-key="ArrowRight"] {
    font-size: 11px;
    //font-weight: 700;
    text-align: center;
  }
}

