// animation
/////////////////////////////////////////////////////////////////////////////
@keyframes anim_acid {from {filter:hue-rotate(0deg);} to {filter:hue-rotate(360deg);}}
.fx_acid {
  animation: anim_acid 2s linear infinite;
}

/*@keyframes anim_strobo {from {filter: brightness(-200%);} to {filter: brightness(200%);}}*/
@keyframes anim_strobo {
  0% {filter: brightness(0%);}
  100% {filter: brightness(150%);}
}
.fx_strobo {
  animation: anim_strobo 0.1s linear infinite;
}
@keyframes anim_strasto {0% {filter: contrast(100%) brightness(100%);} 50% {filter: contrast(1000%) brightness(200%);} to {filter: contrast(100%) brightness(100%);}}
.fx_strasto {
  animation: anim_strasto 0.33s linear infinite;
}
@keyframes anim_scato {0% {filter: invert(0%);} 50% {filter: invert(0%);}  51% {filter: invert(100%);} 100% {filter: invert(100%);}}
.fx_scato {
  animation: anim_scato 0.125s linear infinite;
}
@keyframes anim_bublur {0% {filter: blur(0px);} 100% {filter: blur(20px);}}
.fx_bublur {
  animation: anim_bublur 0.166666s linear infinite;
}


@keyframes anim_disco {
  0%   {filter: none}
  100% {filter: brightness(0.4) sepia(1) hue-rotate(280deg) saturate(530%);}
}
.fx_disco {
  animation: anim_disco .125s linear infinite;
}

