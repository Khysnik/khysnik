.ui_explorer_container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: auto;
  height: auto;
  display: flex;
  flex-direction: column;

  .ui_explorer__panes--tree {
    flex 0 0 auto
    border-right 1px solid #999;
  }

  .ui_explorer {
    flex: 1;
    overflow-y: auto;
  }
  .ui_explorer--column {
    overflow-x: auto;
  }
}


