.ui_icon > .ico,
.ui_icon > img,
.ui_icon > span {
  //cursor: pointer;
  pointer-events: auto;
}

.ui_icon:hover {
  z-index: 999 !important;
}
.ui_icon > .ico,
.ui_icon > img {
  box-sizing: content-box;
  image-rendering:optimizeSpeed;             // Legal fallback
  image-rendering:-moz-crisp-edges;          // Firefox
  image-rendering:-o-crisp-edges;            // Opera
  image-rendering:-webkit-optimize-contrast; // Safari
  image-rendering:optimize-contrast;         // CSS3 Proposed
  image-rendering:crisp-edges;               // CSS4 Proposed
  image-rendering:pixelated;                 // CSS4 Proposed
  -ms-interpolation-mode:nearest-neighbor;   // IE8+
}
.ui_icon {
  //cursor: pointer;
  pointer-events: none;
  //border: 1px solid red
}

.ui_icon.ui_selected > span {
  outline-color: rgba(255,255,255,0.8);
  background: #0090E4;
  color: #fff;
  text-shadow: 0 0 transparent;
}

.ui_icon--cut {
  opacity: .6;
}

//.ui_explorer_ghosts, // for drag ghosts...
.ui_explorer--details,
.ui_explorer--column,
.ui_explorer--list,
.ui_explorer--workspace,
.ui_explorer--workspace--full,
.ui_explorer--icons {
  overflow-y: scroll;
  overflow-x: hidden;
  //padding: 5px;

  > .ui_icon {
    position: relative;
    text-align: center;
    display: inline-block;
    vertical-align: top;
    height: 60px;
    width: 72px;
    z-index: 0;
    line-height: 12px;
    //pointer-events: none;
    margin-bottom: 2px;

    padding-top: 5px;
    padding-left: 1px;
  }
  > .ui_icon > img,
  > .ui_icon > .ico {
    width: 32px;
    height: 32px;
    display: block;
    margin: auto;
    // use border bottom instead of margin to avoid no pointer event gap
    border-bottom: 1px solid transparent;
  }
  > .ui_icon > span {
    display: inline-block;
    overflow: hidden;
    text-overflow: ellipsis;
    padding: 1px 2px;
    padding-left: 2px;
    max-width: 100%;
    max-height: 26px;
  }
  > .ui_icon--focus,
  > .ui_icon--focus,
  > .ui_icon:focus {
    outline: 0 none;
    z-index: 1;
    > span {
       outline-color: rgba(0,0,0,0.8);
       outline-style: dotted;
       outline-width: 1px;
       outline-offset: -1px;
       text-overflow: none;
       word-break break-word
       word-wrap break-word
       max-height: 100px;
    }
  }
}


