.ui_explorer--column {
  overflow-y: hidden;
  overflow-x: scroll;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-content: flex-start;

  .ui_icon {
    height: auto;
    //display: inline-block;
    width: 160px;//25%;
    text-align: left;
    display: flex;
  }
  .ui_icon > img,
  .ui_icon > .ico {
    //display: inline-block;
    flex: 0 0 16px;
    margin: 0;
    width: 16px;
    height: 16px;
    vertical-align: top;
    // use border bottom instead of margin to avoid no pointer event gap
    border-right: 1px solid transparent;
  }
  .ui_icon > span {
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: keep-all;
    white-space: nowrap;
    max-width: 100%;
  }
  .ui_icon:focus > span {
    text-overflow: none;
    position: absolute;
    max-width: 500px;
  }
}


