.ui_menu li hr {
  margin: 0;
  border: 0 none;
  border-top: 1px solid #aaa;
}
.ui_menu label {
  display: block;
  padding: 2px 20px;
}
.ui_menu input {
  margin: 0;
  vertical-align: middle;
  position: absolute;
  left: 2px;
}


.ui_menu__item__ico img {
  height: 16px;
  width: 16px;
}
.ui_menu__item__ico {
  width: 16px;
  height: 0px;
}
.ui_menu__item__ico::after {
  //position: absolute;
  font-size: 80%;
  width: 16px;
  height: 16px;
}


[data-menuitem-selected=true] > .ui_form-ico-checkbox::after {
  content: '✔';
  font-size: 110%;
}
[data-menuitem-selected=true] > .ui_form-ico-radio::after {
  content: '•';
  font-size: 110%;
}

.ui_menu--bar .ui_menu__item--opener::after,
.ui_menu--menu .ui_menu__item--opener::after,
.ui_menu--tree .ui_menu__item--opener::after {
  content: '>';
}

.ui_menu--bar > ul > li.ui_menu__item--opener::after,
.ui_menu--tree .ui_menu__item--focus.ui_menu__item--opener::after,
.ui_menu--scroller > .ui_menu__down_handler::after {
  //content: '>'; //'\25BE'; // ▾
  //transform: rotate(90deg) translateX(1.5px);
  vertical-align: top;
  display: inline-block;
  transform: rotate(90deg) translateX(1.5px);
}
.ui_menu--scroller > .ui_menu__down_handler::after {
  text-align: center;
  position: absolute;
  top: -2px;
}

.ui_menu--scroller > .ui_menu__up_handler::after {
  content: '<'; //'\25BE'; // ▾
  transform: rotate(90deg) translateX(1.5px);
  text-align: center;
  position: absolute;
  top: 0;
}