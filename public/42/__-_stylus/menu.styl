.ui_menu {
  //border: 1px solid red;
  height: auto;
  display: inline-block;
  &:focus {
    outline: 0 none;
  }
}
.ui_menu .ui_menu__item:focus {
  outline: 0 none;
}

.ui_menu--scroller {
  overflow-y: hidden;
  overflow-x: hidden;
  /*right: -30px !important;
  overflow-y: scroll;
  overflow-x: hidden;*/
}
.ui_menu.ui_menu--scroller > ul,
.ui_menu__submenu.ui_menu--scroller > ul {
  margin: 14px 0 !important;
}
.ui_menu--scroller.ui_menu--scroller--active {
  right: -30px !important;
  overflow-y: scroll;
  overflow-x: hidden;
}

.ui_menu--scroller > .ui_menu__up_handler,
.ui_menu--scroller > .ui_menu__down_handler,
.ui_menu--scroller > .ui_menu__right_handler {
  display: block;
  position: fixed;
  z-index: 1;
}
.ui_menu--scroller > .ui_menu__up_handler,
.ui_menu--scroller > .ui_menu__down_handler {
  height: 15px;
  background: #999;
  border: 1px solid #555;
}
.ui_menu--scroller > .ui_menu__up_handler:disabled,
.ui_menu--scroller > .ui_menu__down_handler:disabled {
  background: #aaa;
  border: 1px solid #777;
}
