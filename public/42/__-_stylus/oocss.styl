/* flexbox layout
Tutorial: http://knacss.com/demos/tutoriel.html#flex */

.flex {
  display: flex;
}
.flex--row {
  flex-direction: row;
}
.flex--column {
  flex-direction: column;
}
.flex--wrap {
  flex-wrap: wrap;
}
.flex__fluid {
  flex: 1;
}
.flex0 {
  flex: 0;
}
.flex1 {
  flex: 1;
}
.flex2 {
  flex: 2;
}

/* responsive */
.resp {
  margin-right: auto;
  margin-left: auto;
}
@media (min-width: 768px) {
  .resp {
    width: 750px;
  }
}
@media (min-width: 992px) {
  .resp {
    width: 970px;
  }
}
@media (min-width: 1200px) {
  .resp {
    width: 1170px;
  }
}


