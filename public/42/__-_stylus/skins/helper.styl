
button {
  border: 1px solid #555;
  background: #eee;
}

/*! desktop */
.s42_background {
  background-color: #008080;
}

.s42_desktop {
  padding: 5px;
}

.s42_desktop > .s42_icon {
  color: #fff;
  text-shadow: 0 1px #000;
}

.s42_taskbar {
  background-color: #C0C0C0;
}

/*! windows */
.s42_window {
  padding: 2px;
  background: #C0C0C0;
}

.s42_window__head {
  color: #fff;
  background: #000080;
  margin-bottom: 2px;
}

/*.s42_window__body
  background #fff*/

.s42_window__foot {
  background: #C0C0C0;
}

/*! styles */

.s_inset--deep {
  background: #fff;
  border-top: 1px solid #808080;
  border-left: 1px solid #808080;
  box-shadow:
    1px 0 #fff,
    0 1px #fff,
    1px 1px #fff,
    inset -1px -1px #c0c0c0,
    inset 1px 1px #000;
}