#s42_canvas canvas,
#s42_canvas {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 100;
}

/*#s42_canvas canvas {
  border: 2px solid red
}*/


#s42_dock {
  overflow-x auto
}

#s42_dock::-webkit-scrollbar {
  height: 1px;
  width: 1px;
  background: transparent;
}
#s42_dock::-webkit-scrollbar-thumb {
  background: #000;
}
#s42_dock::-webkit-scrollbar-corner {
  background: #000;
}



#s42_screen div[data-exe="castlegafa"] * {
  cursor: url('/c/sys/cursors/metal.cur'), pointer !important;
}

